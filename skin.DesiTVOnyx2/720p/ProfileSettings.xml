<?xml version="1.0" encoding="UTF-8"?>
<window>
	<visible>Window.IsActive(profilesettings) + !Window.IsActive(locksettings)</visible>
	<controls>
		<include>fadebackground</include>
		<control type="image"><!-- Dialog background -->
			<left>160</left>
			<top>40</top>
			<width>970</width>
			<height>620</height>
			<texture border="8">button-menu-background.png</texture>
		</control>
		<control type="label" id="2"><!-- Dialog heading -->
			<left>174</left>
			<top>48</top>
			<width>942</width>
			<height>36</height>
			<align>center</align>
			<label>$INFO[Window.Property(heading)]</label>
			<font>font18</font>
		</control>
		<control type="image">
			<left>174</left>
			<top>88</top>
			<width>942</width>
			<height>4</height>
			<texture>separator.png</texture>
		</control>
		<control type="image" id="101"><!-- Profile image -->
			<left>200</left>
			<top>96</top>
			<width>192</width>
			<height>192</height>
			<align>center</align>
			<aspectratio>keep</aspectratio>
			<texture>icon-profile.png</texture>
		</control>
		<control type="label"><!-- Profile directory heading -->
			<left>400</left>
			<top>166</top>
			<width>400</width>
			<height>25</height>
			<font>font12</font>
			<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
			<label>$LOCALIZE[20070]</label>
		</control>
		<control type="label" id="103"><!-- Profile directory -->
			<left>400</left>
			<top>195</top>
			<width>400</width>
			<height>25</height>
			<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
			<font>font11</font>
		</control>
		<control type="grouplist" id="5"><!-- Control area -->
			<left>200</left>
			<top>296</top>
			<width>882</width>
			<height>280</height>
			<itemgap>0</itemgap>
			<pagecontrol>23</pagecontrol>
			<onleft condition="Skin.HasSetting(lock-screensettings)">noop</onleft>
			<onleft condition="!Skin.HasSetting(lock-screensettings)">28</onleft>
			<onright condition="StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])">noop</onright>
			<onright condition="!StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])">23</onright>
			<onup>28</onup>
			<ondown>28</ondown>
		</control>
		<control type="button" id="7"><!-- Default button -->
			<height>46</height>
			<font>font11</font>
		</control>
		<control type="radiobutton" id="8"><!-- Default radiobutton -->
			<height>46</height>
			<font>font11</font>
		</control>
		<control type="spincontrolex" id="9"><!-- Default spincontrolex -->
			<height>46</height>
			<font>font11</font>
		</control>
		<control type="image" id="11"><!-- Default seperator -->
			<height>4</height>
			<texture>separator.png</texture>
		</control>
		<control type="label" id="14"><!-- Default label -->
			<height>46</height>
			<font>font11</font>
		</control>
		<control type="scrollbar" id="23">
			<left>1092</left>
			<top>296</top>
			<width>18</width>
			<height>280</height>
			<onleft>5</onleft>
			<animation condition="!Control.HasFocus(23) + !Container.Scrolling + !StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31875])" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
			<visible>!StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])</visible>
		</control>
		<control type="button" id="28"><!-- OK -->
			<left>290</left>
			<top>580</top>
			<width>300</width>
			<height>46</height>
			<align>center</align>
			<label>$LOCALIZE[186]</label>
			<onleft>29</onleft>
			<onright>29</onright>
			<onup>5</onup>
			<ondown>5</ondown>
		</control>
		<control type="button" id="29"><!-- Cancel -->
			<left>705</left>
			<top>580</top>
			<width>300</width>
			<height>46</height>
			<align>center</align>
			<label>$LOCALIZE[222]</label>
			<onleft>28</onleft>
			<onright>28</onright>
			<onup>5</onup>
			<ondown>5</ondown>
		</control>
	</controls>
</window>