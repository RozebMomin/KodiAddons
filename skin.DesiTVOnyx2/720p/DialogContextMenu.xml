<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">1000</defaultcontrol>
	<coordinates>
		<origin x="0" y="0"/>
	</coordinates>
	<controls>
		<include>fadebackground</include>
		<control type="image" id="999"><!-- Dialog background image -->
			<left>384</left>
			<top>38</top>
			<width>516</width>
			<height>682</height>
			<texture border="8">button-menu-background.png</texture>
		</control>
		<control type="label"><!-- Dialog heading (Item Settings) -->
			<left>394</left>
			<top>44</top>
			<width>496</width>
			<height>34</height>
			<font>font12</font>
			<label>$LOCALIZE[31560]$INFO[Container(996).NumItems, (,)]</label>
			<align>center</align>
			<visible>IntegerGreaterThan(Container(996).NumItems,3) | IsEmpty(ListItem.Title)</visible>
		</control>
		<control type="label"><!-- Dialog heading (Play) -->
			<left>394</left>
			<top>44</top>
			<width>496</width>
			<height>34</height>
			<font>font12</font>
			<label>$LOCALIZE[208]$INFO[Container(996).NumItems, (,)]</label>
			<align>center</align>
			<visible>!IntegerGreaterThan(Container(996).NumItems,3) + !IsEmpty(ListItem.Title)</visible>
		</control>
		<control type="button">
			<left>878</left>
			<top>28</top>
			<width>32</width>
			<height>32</height>
			<texturefocus>touch-close.png</texturefocus>
			<texturenofocus>touch-close.png</texturenofocus>
			<onclick>Dialog.Close(contextmenu)</onclick>
			<visible>Skin.HasSetting(touch-controls)</visible>
		</control>
		<control type="image">
			<left>394</left>
			<top>80</top>
			<width>496</width>
			<height>4</height>
			<texture>separator.png</texture>
		</control>
		<control type="grouplist" id="996"><!-- Grouplist for context buttons -->
			<left>394</left>
			<top>86</top>
			<width>496</width>
			<height min="96" max="576">auto</height>
			<itemgap>0</itemgap>
			<onleft>Dialog.Close(contextmenu)</onleft>
			<onright>Dialog.Close(contextmenu)</onright>
			<control type="button" id="100"><!-- Custom skin button -->
				<left>0</left>
				<top>0</top>
				<width>496</width>
				<height>48</height>
				<align>center</align>
				<aligny>center</aligny>
				<label>$LOCALIZE[31887]</label>
				<onclick>SetProperty(ItemPath,$VAR[ListItemShortcut],Home)</onclick>
				<onclick>SetProperty(ItemName,$ESCINFO[ListItem.Label],Home)</onclick>
				<onclick>SetProperty(ItemIcon,$ESCINFO[ListItem.Icon],Home)</onclick>
				<onclick>ActivateWindow(1153)</onclick>
				<enable>System.HasAddon(script.favourites)</enable>
				<visible>IntegerGreaterThan(Container(996).NumItems,3) + [Container.Content(movies) | Container.Content(episodes) | Container.Content(songs) | Container.Content(playlists) | Window.IsVisible(videolibrary) | Window.IsVisible(musiclibrary)]</visible>
			</control>
			<control type="button" id="1000"><!-- Button template -->
				<left>0</left>
				<top>0</top>
				<width>496</width>
				<height>48</height>
				<align>center</align>
				<aligny>center</aligny>
			</control>
		</control>
	</controls>
</window>