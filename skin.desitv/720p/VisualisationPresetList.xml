<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>5</defaultcontrol>
	<include>screen-fade</include>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<include>fadebackground</include>
		<control type="image"><!-- Dialog background image -->
			<left>482</left>
			<top>13</top>
			<width>754</width>
			<height>593</height>
			<texture border="8">button-menu-background.png</texture>
			<colordiffuse>osd-background</colordiffuse>
		</control>
		<control type="button"><!-- Touch Close button -->
			<left>1214</left>
			<top>5</top>
			<width>32</width>
			<height>32</height>
			<texturefocus>touch-close.png</texturefocus>
			<texturenofocus>touch-close.png</texturenofocus>
			<onclick>Dialog.Close(all,true)</onclick>
			<visible>system.getbool(input.enablemouse)</visible>
		</control>
		<control type="label" id="2"><!-- Heading label -->
			<left>502</left>
			<top>26</top>
			<width>716</width>
			<height>23</height>
			<align>center</align>
			<label>-</label>
			<font>font12</font>
		</control>
		<control type="label" id="4"><!-- NO presets -->
			<left>502</left>
			<top>237</top>
			<width>716</width>
			<height>23</height>
			<align>center</align>
			<label>$LOCALIZE[13389]</label>
			<font>font12</font>
		</control>
		<control type="image">
			<left>502</left>
			<top>62</top>
			<width>716</width>
			<height>4</height>
			<texture>separator.png</texture>
		</control>
		<control type="list" id="5">
			<left>502</left>
			<top>75</top>
			<width>688</width>
			<height>500</height>
			<onright condition="StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])">noop</onright>
			<onright condition="!StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])">60</onright>
			<onup>5</onup>
			<ondown>5</ondown>
			<pagecontrol>60</pagecontrol>
			<itemlayout width="688" height="45">
				<control type="label">
					<left>10</left>
					<top>0</top>
					<width>668</width>
					<height>45</height>
					<font>font12</font>
					<selectedcolor>listselected-text</selectedcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>
			<focusedlayout width="688" height="45">
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>688</width>
					<height>45</height>
					<texture border="8">button-default-focus.png</texture>
				</control>
				<control type="label">
					<left>10</left>
					<top>0</top>
					<width>668</width>
					<height>45</height>
					<font>font12</font>
					<selectedcolor>listselected-text</selectedcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</focusedlayout>
		</control>
		<control type="scrollbar" id="60">
			<left>1200</left>
			<top>75</top>
			<width>18</width>
			<height>500</height>
			<onleft>5</onleft>
			<animation condition="!Control.HasFocus(60) + !Container.Scrolling + !StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31875])" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
			<visible>!StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])</visible>
		</control>
	</controls>
</window>