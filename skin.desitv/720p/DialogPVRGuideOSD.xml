<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">11</defaultcontrol>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<include>fadebackground</include>
		<control type="group">
			<control type="image"><!-- Dialog background image -->
				<left>400</left>
				<top>30</top>
				<width>480</width>
				<height>660</height>
				<texture border="8">button-menu-background.png</texture>
			</control>
			<control type="label"><!-- Dialog heading -->
				<left>440</left>
				<top>46</top>
				<width>430</width>
				<height>40</height>
				<font>font12</font>
				<label>$LOCALIZE[19222] - $INFO[VideoPlayer.ChannelName]</label>
				<align>center</align>
			</control>
			<control type="label"><!-- Selected items date -->
				<left>440</left>
				<top>90</top>
				<width>430</width>
				<height>30</height>
				<font>font11</font>
				<label>$INFO[Container(11).ListItem.StartDate]</label>
				<align>center</align>
			</control>
			<control type="list" id="11">
				<left>430</left>
				<top>130</top>
				<width>410</width>
				<height>490</height>
				<onright condition="StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])">noop</onright>
				<onright condition="!StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])">60</onright>
				<onup>11</onup>
				<ondown>11</ondown>
				<viewtype label="535">list</viewtype>
				<pagecontrol>60</pagecontrol>
				<itemlayout height="35" width="410">
					<control type="label">
						<left>10</left>
						<top>0</top>
						<width>100</width>
						<height>30</height>
						<selectedcolor>listselected-text</selectedcolor>
						<label>$INFO[ListItem.StartTime]</label>
					</control>
					<control type="image">
						<left>120</left>
						<top>5</top>
						<width>20</width>
						<height>20</height>
						<texture>overlayisrecording.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>
					<control type="image">
						<left>120</left>
						<top>5</top>
						<width>20</width>
						<height>20</height>
						<texture>overlayhastimer.png</texture>
						<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
					</control>
					<control type="label">
						<right>400</right>
						<top>0</top>
						<width>300</width>
						<height>30</height>
						<font>font12</font>
						<selectedcolor>listselected-text</selectedcolor>
						<align>right</align>
						<label>$INFO[ListItem.Label]</label>
						<visible>![ListItem.IsRecording | ListItem.HasTimer]</visible>
					</control>
					<control type="label">
						<right>400</right>
						<top>0</top>
						<width>250</width>
						<height>30</height>
						<font>font12</font>
						<selectedcolor>listselected-text</selectedcolor>
						<align>right</align>
						<label>$INFO[ListItem.Label]</label>
						<visible>ListItem.IsRecording | ListItem.HasTimer</visible>
					</control>
				</itemlayout>
				<focusedlayout height="35" width="410">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>410</width>
						<height>30</height>
						<texture border="6">button-default-focus.png</texture>
						<visible>Control.HasFocus(11)</visible>
					</control>
					<control type="label">
						<left>10</left>
						<top>0</top>
						<width>100</width>
						<height>30</height>
						<selectedcolor>listselected-text</selectedcolor>
						<label>$INFO[ListItem.StartTime]</label>
					</control>
					<control type="image">
						<left>120</left>
						<top>5</top>
						<width>20</width>
						<height>20</height>
						<texture>overlayisrecording.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>
					<control type="image">
						<left>120</left>
						<top>5</top>
						<width>20</width>
						<height>20</height>
						<texture>overlayhastimer.png</texture>
						<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
					</control>
					<control type="label">
						<right>400</right>
						<top>0</top>
						<width>300</width>
						<height>30</height>
						<font>font12</font>
						<selectedcolor>listselected-text</selectedcolor>
						<align>right</align>
						<label>$INFO[ListItem.Label]</label>
						<visible>![ListItem.IsRecording | ListItem.HasTimer]</visible>
					</control>
					<control type="label">
						<right>400</right>
						<top>0</top>
						<width>250</width>
						<height>30</height>
						<font>font12</font>
						<selectedcolor>listselected-text</selectedcolor>
						<align>right</align>
						<label>$INFO[ListItem.Label]</label>
						<visible>ListItem.IsRecording | ListItem.HasTimer</visible>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<left>844</left>
				<top>130</top>
				<width>20</width>
				<height>490</height>
				<onleft>11</onleft>
				<ondown>61</ondown>
				<onup>61</onup>
				<animation condition="!Control.HasFocus(60) + !Container.Scrolling + !StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31875])" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
				<visible>!StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])</visible>
			</control>
			<control type="label"><!-- Page count -->
				<right>850</right>
				<top>640</top>
				<width>400</width>
				<height>20</height>
				<font>font12</font>
				<align>right</align>
				<label>$INFO[Container(11).CurrentPage]/$INFO[Container(11).NumPages] ($INFO[Container(11).NumItems])</label>
			</control>
		</control>
	</controls>
</window>
