<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>3</defaultcontrol>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<include>fadebackground</include>
		<control type="image"><!-- Dialog background image -->
			<left>120</left>
			<top>60</top>
			<width>1040</width>
			<height>532</height>
			<texture border="8">button-menu-background.png</texture>
		</control>
		<control type="button"><!-- Touch Close button -->
			<left>1137</left>
			<top>51</top>
			<width>32</width>
			<height>32</height>
			<texturefocus>touch-close.png</texturefocus>
			<texturenofocus>touch-close.png</texturenofocus>
			<onclick>Close</onclick>
			<visible>System.GetBool(input.enablemouse)</visible>
		</control>

		<control type="grouplist">
			<left>140</left>
			<top>72</top>
			<width>996</width>
			<height>37</height>
			<align>center</align>
			<aligny>center</aligny>
			<orientation>horizontal</orientation>
			<control type="label" id="1"><!-- Dialog heading -->
				<width max="900">auto</width>
				<height>37</height>
				<wrapmultiline>true</wrapmultiline>
				<aligny>top</aligny>
			</control>
			<control type="label"><!-- Number of files -->
				<width max="96">auto</width>
				<height>37</height>
				<label>$VAR[SelectDialogNumObjects]</label>
				<aligny>top</aligny>
			</control>
		</control>
		<control type="image">
			<left>140</left>
			<top>106</top>
			<width>996</width>
			<height>4</height>
			<texture>separator.png</texture>
		</control>
		<control type="list" id="3"><!-- Type 3 Select -->
			<left>170</left>
			<top>124</top>
			<width>700</width>
			<height>448</height>
			<onleft condition="StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])">noop</onleft>
			<onleft condition="!StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])">23</onleft>
			<onright>5</onright>
			<pagecontrol>23</pagecontrol>
			<itemlayout width="700" height="56">
				<control type="image">
					<left>0</left>
					<top>2</top>
					<height>52</height>
					<width>52</width>
					<texture fallback="DefaultFile.png">$INFO[ListItem.Icon]</texture>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="label">
					<left>70</left>
					<top>-4</top>
					<width>614</width>
					<height>56</height>
					<font>font11</font>
					<selectedcolor>button-text</selectedcolor>
					<label>$INFO[ListItem.Label] [I]$INFO[ListItem.Label2, - ] [/I]</label>
					<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
				</control>
			</itemlayout>
			<focusedlayout width="700" height="56">
				<control type="image">
					<left>0</left>
					<top>2</top>
					<height>52</height>
					<width>52</width>
					<texture fallback="DefaultFile.png">$INFO[ListItem.Icon]</texture>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="image">
					<left>54</left>
					<top>0</top>
					<width>646</width>
					<height>56</height>
					<texture border="6">button-default-focus.png</texture>
					<animation condition="!Control.HasFocus(3)" effect="fade" start="100" end="60">Conditional</animation>
				</control>
				<control type="label">
					<left>70</left>
					<top>-4</top>
					<width>614</width>
					<height>56</height>
					<font>font11</font>
					<selectedcolor>button-text</selectedcolor>
					<label>$INFO[ListItem.Label] [I]$INFO[ListItem.Label2, - ] [/I]</label>
					<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
				</control>
			</focusedlayout>
		</control>
		<control type="list" id="6"><!-- Type 6 Select -->
			<left>145</left>
			<top>124</top>
			<width>700</width>
			<height>448</height>
			<onright condition="StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])">noop</onright>
			<onright condition="!StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])">26</onright>
			<onup>6</onup>
			<ondown>6</ondown>
			<pagecontrol>26</pagecontrol>
			<itemlayout width="700" height="56">
				<control type="image">
					<left>0</left>
					<top>2</top>
					<height>52</height>
					<width>52</width>
					<texture fallback="DefaultFile.png">$INFO[ListItem.Icon]</texture>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="label">
					<left>70</left>
					<top>-4</top>
					<width>614</width>
					<height>56</height>
					<font>font11</font>
					<selectedcolor>button-text</selectedcolor>
					<label>$INFO[ListItem.Label] [I]$INFO[ListItem.Label2, - ] [/I]</label>
					<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
				</control>
			</itemlayout>
			<focusedlayout width="700" height="56">
				<control type="image">
					<left>0</left>
					<top>2</top>
					<height>52</height>
					<width>52</width>
					<texture fallback="DefaultFile.png">$INFO[ListItem.Icon]</texture>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="image">
					<left>54</left>
					<top>0</top>
					<width>646</width>
					<height>56</height>
					<texture border="6">button-default-focus.png</texture>
					<animation condition="!Control.HasFocus(6)" effect="fade" start="100" end="60">Conditional</animation>
				</control>
				<control type="label">
					<left>70</left>
					<top>-4</top>
					<width>614</width>
					<height>56</height>
					<font>font11</font>
					<selectedcolor>button-text</selectedcolor>
					<label>$INFO[ListItem.Label] [I]$INFO[ListItem.Label2, - ] [/I]</label>
					<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
				</control>
			</focusedlayout>
		</control>
		<control type="scrollbar" id="23">
			<left>136</left>
			<top>124</top>
			<width>18</width>
			<height>448</height>
			<onright>3</onright>
			<animation condition="!Control.HasFocus(23) + !Container.Scrolling + !StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31875])" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
			<visible>Control.IsVisible(3) + !StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])</visible>
		</control>
		<control type="group">
			<visible>Control.IsVisible(6)</visible>
			<control type="scrollbar" id="26">
				<left>856</left>
				<top>124</top>
				<width>18</width>
				<height>448</height>
				<onleft>6</onleft>
				<onright>5</onright>
				<animation condition="!Control.HasFocus(26) + !Container.Scrolling + !StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31875])" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
				<visible>!StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])</visible>
			</control>
			<control type="image">
				<left>884</left>
				<top>190</top>
				<height>256</height>
				<width>256</width>
				<texture fallback="DefaultFile.png">$INFO[Container(6).ListItem.Icon]</texture>
				<aspectratio aligny="top">keep</aspectratio>
			</control>
		</control>
		<control type="button" id="5"><!-- Manual -->
			<left>884</left>
			<top>124</top>
			<width>256</width>
			<height>56</height>
			<font>font12</font>
			<label>$LOCALIZE[186]</label>
			<align>center</align>
			<onleft condition="Control.IsVisible(3)">3</onleft>
			<onleft condition="Control.IsVisible(6)">26</onleft>
		</control>
	</controls>
</window>