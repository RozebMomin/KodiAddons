<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>50</defaultcontrol>
	<menucontrol>9000</menucontrol>
	<views>50</views>
	<onload>ClearProperty(ShowScreenSettings,Home)</onload>
	<onunload>ClearProperty(ShowScreenSettings,Home)</onunload>
	<controls>
		<include>background</include>
		<include>Fake-Overlay</include>
		<control type="grouplist">
			<left>780</left>
			<top>20</top>
			<width>auto</width>
			<height>62</height>
			<align>left</align>
			<aligny>center</aligny>
			<orientation>horizontal</orientation>
			<control type="label"><!-- Video screen heading -->
				<width max="400">auto</width>
				<height>62</height>
				<label>$VAR[PVRHeading]</label>
				<font>font18</font>
				<wrapmultiline>true</wrapmultiline>
				<aligny>top</aligny>
			</control>
			<control type="label"><!-- Number of files -->
				<width max="80">auto</width>
				<height>62</height>
				<label>$INFO[Container.NumItems,(,)]</label>
				<aligny>top</aligny>
			</control>
		</control>

		<control type="group">
			<include file="View-PVR.xml">PVRListView</include>
		</control>

		<control type="group"><!-- Screen Settings Menu -->
			<left>0</left>
			<top>720</top>
			<include>screen-settings</include>
			<include>fadebackground</include>
			<control type="image"><!-- Button background -->
				<left>440</left>
				<top>80</top>
				<width>396</width>
				<height>540</height>
				<texture border="8">button-menu-background.png</texture>
			</control>
			<control type="label"><!-- Dialog heading -->
				<left>450</left>
				<top>90</top>
				<width>372</width>
				<height>34</height>
				<font>font12</font>
				<label>$LOCALIZE[31557]</label>
				<align>center</align>
			</control>
			<control type="button"><!-- Touch Close button -->
				<left>814</left>
				<top>70</top>
				<width>32</width>
				<height>32</height>
				<texturefocus>touch-close.png</texturefocus>
				<texturenofocus>touch-close.png</texturenofocus>
				<onclick condition="!StringCompare(Window(Home).Property(ShowScreenSettings),show)">SetProperty(ShowScreenSettings,show,Home)</onclick>
				<onclick condition="StringCompare(Window(Home).Property(ShowScreenSettings),show)">ClearProperty(ShowScreenSettings,Home)</onclick>
				<visible>System.GetBool(input.enablemouse)</visible>
			</control>
			<control type="image">
				<left>450</left>
				<top>132</top>
				<width>376</width>
				<height>4</height>
				<texture>separator.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<left>450</left>
				<top>140</top>
				<width>376</width>
				<height>480</height>
				<onright>50</onright>
				<onleft>50</onleft>
				<control type="button" id="3"><!-- Sort by button -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[103]</label>
				</control>
				<control type="togglebutton" id="4"><!-- Sort direction button -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[21429]: $LOCALIZE[21430]</label>
					<altlabel>$LOCALIZE[21429]: $LOCALIZE[21431]</altlabel>
					<font>font11</font>
				</control>
				<control type="radiobutton" id="5"><!-- Group items -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[19270]</label>
					<font>font11</font>
					<visible>[Window.IsVisible(tvrecordings) | Window.IsVisible(radiorecordings)]</visible>
				</control>
				<control type="radiobutton" id="7"><!-- Show deleted recordings -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[19184]</label>
					<font>font11</font>
					<visible>[Window.IsVisible(tvrecordings) | Window.IsVisible(radiorecordings)]</visible>
				</control>
				<control type="button" id="28"><!-- Change Channel Groups -->
					<width>376</width>
					<height>48</height>
					<label>-</label>
					<font>font11</font>
				</control>
				<control type="button" id="901"><!-- Channels -->
				<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[19019]</label>
					<font>font11</font>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvchannels)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(radiochannels)</onclick>
				</control>
				<control type="button" id="902"><!-- Guide -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[22020]</label>
					<font>font11</font>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvguide)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(radioguide)</onclick>
				</control>
				<control type="button" id="904"><!-- Search -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[137]</label>
					<font>font11</font>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvsearch)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(radiosearch)</onclick>
				</control>
				<control type="button" id="905"><!-- Timers -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[19040]</label>
					<font>font11</font>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvtimers)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(radiotimers)</onclick>
				</control>
			</control>
		</control>

		<include>group-focusvert</include>

		<include>touch-controls</include>

	</controls>
</window>
