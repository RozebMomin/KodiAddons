<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>10</defaultcontrol>
	<coordinates>
		<system>1</system>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<include>screen-fade</include>
	<controls>
		<include>fadebackground</include>
		<control type="group">
			<visible>!Window.IsVisible(selectdialog)</visible>
			<control type="image"><!-- Dialog background image -->
				<left>292</left>
				<top>256</top>
				<width>690</width>
				<height>220</height>
				<texture border="8">button-menu-background.png</texture>
			</control>
			<control type="label" id="1"><!-- Dialog heading -->
				<left>318</left>
				<top>272</top>
				<width>637</width>
				<height>25</height>
