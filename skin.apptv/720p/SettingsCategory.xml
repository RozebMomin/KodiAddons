<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>3</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<include>screen-fade</include>
	<controls>
		<include>background</include>
		<include>Fake-Overlay</include>

		<control type="label" id="2"><!-- Settings screen heading -->
			<left>946</left>
			<top>25</top>
			<width>310</width>
			<height>32</height>
			<font>font18</font>
		</control>
		<control type="label"><!-- Settings subscreen heading -->
			<left>946</left>
			<top>62</top>
			<width>310</width>
			<height>32</height>
			<label>$LOCALIZE[5]</label>
			<font>font18</font>
		</control>
		<control type="grouplist" id="3"><!-- Subheadings area -->
			<left>940</left>
			<top>112</top>
			<width>320</width>
			<height>434</height>
			<itemgap>-2</itemgap>
			<onleft>5</onleft>
			<ondown>20</ondown>
		</control>

		<control type="button" id="20"><!-- Setting level button -->
			<left>940</left>
			<top>598</top>
			<width>320</width>
			<height>56</height>
			<font>font11</font>
			<textcolor>listselected-text</textcolor>
			<label>$LOCALIZE[10037]</label>
			<align>right</align>
			<onleft>5</onleft>
			<onright>5</onright>
			<onup>3</onup>
			<onclick>SettingsLevelChange</onclick>
		</control>
		<control type="label"><!-- Settings level heading -->
			<left>958</left>
			<top>598</top>
			<width>320</width>
			<height>56</height>
			<label>$LOCALIZE[10004]:</label>
			<font>font11</font>
		</control>
		<!-- Markers for control area items (Don't show if scrollbar is in use)-->
		<control type="group">
			<visible>StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])</visible><!-- Don't show scrollbar -->
			<control type="image">
				<left>484</left>
				<top>92</top>
				<height>24</height>
				<width>24</width>
				<texture>scroll-up.png</texture>
				<visible>Container(5).HasPrevious</visible>
			</control>
			<control type="image">
				<left>484</left>
				<top>648</top>
				<height>24</height>
				<width>24</width>
				<texture>scroll-down.png</texture>
				<visible>Container(5).HasNext</visible>
			</control>
		</control>

		<control type="grouplist" id="5"><!-- Controls area -->
			<left>53</left>
			<top>112</top>
			<width>885</width>
			<height>542</height>
			<itemgap>-2</itemgap>
			<onleft condition="StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])">noop</onleft>
			<onleft condition="!StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])">23</onleft>
			<onright>3</onright>
			<pagecontrol>23</pagecontrol>
		</control>
		<control type="scrollbar" id="23">
			<left>10</left>
			<top>112</top>
			<width>18</width>
			<height>542</height>
			<onleft>9000</onleft>
			<onright>5</onright>
			<animation condition="!Control.HasFocus(23) + !Container.Scrolling + !StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31875])" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
			<visible>!StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])</visible>
		</control>
		<control type="textbox" id="6"><!-- Settings description area -->
			<left>10</left>
			<top>660</top>
			<width>1260</width>
			<height>50</height>
			<font>font10</font>
			<align>center</align>
		</control>
		<control type="button" id="7"><!-- Default button -->
			<left>53</left>
			<top>187</top>
			<width>870</width>
			<height>56</height>
			<textwidth>810</textwidth>
			<font>font12</font>
			<invalidcolor>invalid-text</invalidcolor>
		</control>
		<control type="radiobutton" id="8"><!-- Default radiobutton -->
			<left>53</left>
			<top>187</top>
			<width>870</width>
			<textwidth>810</textwidth>
			<height>56</height>
			<font>font12</font>
			<radioposx>844</radioposx>
		</control>
		<control type="spincontrolex" id="9"><!-- Default spincontrolex -->
			<left>53</left>
			<top>187</top>
			<width>870</width>
			<height>56</height>
			<font>font12</font>
			<reverse>yes</reverse>
		</control>
		<control type="button" id="10"><!-- Default category button -->
			<left>53</left>
			<top>187</top>
			<width>320</width>
			<height>56</height>
			<label>$LOCALIZE[224]</label>
			<font>font12</font>
		</control>
		<control type="sliderex" id="13"><!-- Default slider button -->
			<left>53</left>
			<top>187</top>
			<width>320</width>
			<height>56</height>
			<font>font12</font>
		</control>
	</controls>
</window>