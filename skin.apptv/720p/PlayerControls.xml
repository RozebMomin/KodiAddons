				<visible>Player.HasAudio</visible>
			</control>
			<control type="group" id="1103"><!-- Repeat -->
				<width>40</width>
				<height>40</height>
				<visible>Player.HasAudio</visible>
				<control type="button" id="1104">
					<width>40</width>
					<height>40</height>
					<onleft>1102</onleft>
					<onright>1105</onright>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
