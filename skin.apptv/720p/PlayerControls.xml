			</control>
			<control type="label">
				<left>354</left>
				<top>135</top>
				<width>778</width>
				<height>20</height>
				<label>$INFO[MusicPlayer.Artist]</label>
				<font>font12</font>
				<align>center</align>
			</control>
			<control type="label">
