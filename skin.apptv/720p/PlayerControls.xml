			</control>
			<control type="image" id="1105"><!-- Dummy -->
				<width>20</width>
				<height>40</height>
				<texture>blank.png</texture>
			</control>
			<control type="button" id="1106"><!-- Channel Up -->
				<width>40</width>
				<height>40</height>
