			<control type="button" id="1108"><!-- Volume Up -->
				<width>40</width>
				<height>40</height>
				<texturefocus>osd-btn-volumeup-focus.png</texturefocus>
				<texturenofocus>osd-btn-volumeup.png</texturenofocus>
				<onclick>VolumeUp</onclick>
			</control>
			<control type="button" id="1109"><!-- Volume Down -->
				<width>40</width>
				<height>40</height>
