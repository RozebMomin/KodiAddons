				<colordiffuse>ProgressBarColor</colordiffuse>
			</control>
			<control type="slider">
				<left>550</left>
				<top>211</top>
				<width>380</width>
				<height>20</height>
				<action>seek</action>
			</control>
			<control type="label">
				<left>940</left>
				<top>210</top>
				<width>170</width>
				<height>20</height>
				<font>font11</font>
				<label>- $INFO[VideoPlayer.TimeRemaining]</label>
			</control>
		</control>
		<!-- Music -->
 		<control type="group">
			<visible>Player.HasAudio</visible>
			<control type="image">
				<left>164</left>
				<top>137</top>
				<width>150</width>
				<height>150</height>
				<align>left</align>
				<aligny>bottom</aligny>
				<fadetime>300</fadetime>
				<texture fallback="DefaultAudio.png">$INFO[MusicPlayer.Cover]</texture>
				<aspectratio>keep</aspectratio>
				<visible>!Window.IsActive(visualisation)</visible>
			</control>
			<control type="button"><!-- Touch button for Fullscreen -->
				<left>164</left>
				<top>137</top>
				<width>150</width>
				<height>150</height>
				<texturefocus>-</texturefocus>
				<texturenofocus>-</texturenofocus>
