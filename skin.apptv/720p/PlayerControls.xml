		<system>1</system>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<include>fadebackground</include>
		<control type="image"><!-- Dialog background image -->
			<left>123</left>
			<top>125</top>
			<height>175</height>
