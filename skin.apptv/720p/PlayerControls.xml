			<left>354</left>
			<top>245</top>
			<width>778</width>
			<height>40</height>
			<itemgap>2</itemgap>
			<orientation>horizontal</orientation>
			<align>center</align>
			<onleft>999</onleft>
			<onright>999</onright>
			<onup>999</onup>
			<ondown>999</ondown>
			<visible>true</visible>
			<control type="button" id="1100"><!-- DVD Menu</description -->
				<width>40</width>
				<height>40</height>
				<texturefocus>osd-btn-dvdmenu-focus.png</texturefocus>
				<texturenofocus>osd-btn-dvdmenu.png</texturenofocus>
				<onclick>PlayerControl(ShowVideoMenu)</onclick>
				<visible>VideoPlayer.HasMenu</visible>
			</control>
			<control type="button" id="1101"><!-- Subtitles Menu -->
				<width>40</width>
				<height>40</height>
