<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<onload>ClearProperty(ShowScreenSettings,home)</onload>
	<onunload>ClearProperty(ShowScreenSettings,home)</onunload>
	<menucontrol>9000</menucontrol>
	<controls>
		<include>background</include>
		<control type="label"><!-- Video playlist heading -->
			<left>946</left>
			<top>25</top>
			<width>314</width>
			<height>50</height>
			<label>$LOCALIZE[10522]</label>
			<font>apptv30</font>
			<wrapmultiline>true</wrapmultiline>
			<visible>Window.IsActive(videoplaylist)</visible>
		</control>
		<control type="label"><!-- Music playlist heading -->
			<left>946</left>
			<top>25</top>
			<width>314</width>
			<height>50</height>
			<label>$LOCALIZE[10517]</label>
			<font>apptv30</font>
			<wrapmultiline>true</wrapmultiline>
			<visible>Window.IsActive(musicplaylist)</visible>
		</control>

		<include file="View-General.xml">ListView</include>

		<control type="group"><!-- Video Playlist -->
			<visible>Window.IsActive(videoplaylist)</visible>
			<control type="videowindow">
				<left>35</left>
				<top>125</top>
				<width>610</width>
				<height>337</height>
				<visible>Player.HasVideo + !Skin.HasSetting(background-playingmedia)</visible>
			</control>
			<control type="image">
				<left>314</left>
				<top>116</top>
				<width>336</width>
				<height>336</height>
				<texture fallback="DefaultVideo.png" background="true" diffuse="mask-rect.png">$VAR[IconPoster]</texture>
				<aspectratio scalediffuse="true" align="right" aligny="top">keep</aspectratio>
				<visible>Skin.HasSetting(background-playingmedia) | !Player.HasVideo</visible>
			</control>
			<control type="group">
				<visible>Player.HasVideo</visible>
				<control type="label">
					<left>35</left>
					<top>568</top>
					<width>619</width>
					<height>30</height>
					<font>apptv23</font>
					<label>$INFO[VideoPlayer.Title]</label>
					<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
				</control>
				<control type="progress">
					<left>34</left>
					<top>605</top>
					<width>405</width>
					<height>16</height>
					<info>Player.Progress</info>
				</control>
				<control type="label"><!-- Time/Duration Label -->
					<left>455</left>
					<top>600</top>
					<width>200</width>
					<height>25</height>
					<font>apptv22</font>
					<label>$INFO[VideoPlayer.Time]$INFO[VideoPlayer.Duration, / ]</label>
				</control>
			</control>
		</control>

		<control type="group"><!-- Music Playlist -->
			<visible>Window.IsActive(musicplaylist)</visible>
			<control type="image">
				<left>122</left>
				<top>150</top>
				<width>384</width>
				<height>384</height>
				<texture background="true" diffuse="mask-squ.png">$INFO[ListItem.Icon]</texture>
				<aspectratio scalediffuse="false">keep</aspectratio>
			</control>
			<control type="group">
				<visible>Player.HasAudio</visible>
				<control type="progress">
					<left>34</left>
					<top>568</top>
					<width>460</width>
					<height>16</height>
					<info>Player.Progress</info>
				</control>
				<control type="label">
					<left>505</left>
					<top>560</top>
					<width>180</width>
					<height>25</height>
					<font>apptv23</font>
					<label>$INFO[Player.Time]$INFO[Player.Duration,/ ]</label>
				</control>
				<control type="label">
					<left>35</left>
					<top>585</top>
					<width>480</width>
					<height>25</height>
					<label>$INFO[MusicPlayer.Artist]</label>
					<font>apptv23</font>
					<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
				</control>
				<control type="label">
					<left>35</left>
					<top>615</top>
					<width>660</width>
					<height>25</height>
					<font>apptv23</font>
					<label>$INFO[MusicPlayer.Title]</label>
					<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
				</control>
			</control>
		</control>

		<control type="group">
			<top>720</top>
			<include>screen-settings</include>
			<include>fadebackground</include>
			<control type="image"><!-- Button background -->
				<left>466</left>
				<top>212</top>
				<width>384</width>
				<height>360</height>
				<texture border="9">button-menu-background.png</texture>
			</control>
			<control type="label"><!-- Dialog heading -->
				<left>477</left>
				<top>224</top>
				<width>360</width>
				<height>32</height>
				<font>apptv23</font>
				<label>$LOCALIZE[31557]$INFO[Container(9000).NumItems, (,)]</label>
				<align>center</align>
			</control>
			<control type="button"><!-- Touch Close button -->
				<left>828</left>
				<top>202</top>
				<width>32</width>
				<height>32</height>
				<texturefocus>touch-close.png</texturefocus>
				<texturenofocus>touch-close.png</texturenofocus>
				<onclick condition="!String.IsEqual(Window(home).Property(ShowScreenSettings),show)">SetProperty(ShowScreenSettings,show,home)</onclick>
				<onclick condition="String.IsEqual(Window(home).Property(ShowScreenSettings),show)">ClearProperty(ShowScreenSettings,home)</onclick>
				<visible>$EXP[isEnabledTouch]</visible>
			</control>
			<control type="image">
				<left>477</left>
				<top>254</top>
				<width>362</width>
				<height>4</height>
				<texture>separator.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<left>477</left>
				<top>260</top>
				<width>362</width>
				<height>300</height>
				<itemgap>0</itemgap>
				<onleft>50</onleft>
				<onright>50</onright>
				<control type="button" id="20"><!-- Shuffle -->
					<width>362</width>
					<height>50</height>
					<font>apptv23</font>
					<label>$LOCALIZE[191]</label>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="radiobutton" id="28"><!-- Randomize -->
					<width>362</width>
					<height>50</height>
					<font>apptv23</font>
					<label>$LOCALIZE[13319]</label>
					<textoffsetx>10</textoffsetx>
					<radioposx>330</radioposx>
				</control>
				<control type="button" id="26"><!-- Repeat -->
					<width>362</width>
					<height>50</height>
					<font>apptv23</font>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="button" id="21"><!-- Save -->
					<width>362</width>
					<height>50</height>
					<font>apptv23</font>
					<label>$LOCALIZE[190]</label>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="button" id="22"><!-- Clear -->
					<width>362</width>
					<height>50</height>
					<font>apptv23</font>
					<label>$LOCALIZE[192]</label>
					<onclick condition="Window.IsActive(musicplaylist)">ReplaceWindow(music)</onclick>
					<onclick condition="Window.IsActive(videoplaylist)">ReplaceWindow(videos)</onclick>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="button" id="1200"><!-- Player controls -->
					<width>362</width>
					<height>50</height>
					<font>apptv23</font>
					<label>$LOCALIZE[16003] $LOCALIZE[478]</label>
					<textoffsetx>10</textoffsetx>
					<onclick>SetFocus(50)</onclick>
					<onclick condition="String.IsEqual(Window(home).Property(ShowScreenSettings),show)">ClearProperty(ShowScreenSettings,home)</onclick>
					<onclick>ActivateWindow(playercontrols)</onclick>
					<enable>Player.HasAudio | Player.HasVideo</enable>
				</control>
			</control>
		</control>

		<include>element-focusvert</include>

	</controls>
</window>