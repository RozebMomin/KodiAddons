<?xml version="1.0" encoding="UTF-8"?>
<window>
	<onload condition="Skin.HasSetting(background-slideshow)">RunScript(script.artistslideshow)</onload>
	<visible>!Window.IsVisible(fullscreenvideo) + !Window.IsActive(script-cu-lrclyrics-main.xml)</visible>
	<controls>
		<include>background</include>
		<control type="group"><!-- infos -->
			<visible>Player.ShowInfo</visible>
			<control type="image" id="992"><!-- Music logo if available -->
				<left>8</left>
				<top>80</top>
				<width>400</width>
				<height>155</height>
				<texture>$INFO[Window(Home).Property(SkinHelper.Player.Art.ClearLogo)]</texture>
				<aspectratio align="left" aligny="bottom">keep</aspectratio>
			</control>
			<control type="image"><!-- media info background image -->
				<left>0</left>
				<top>515</top>
				<width>1280</width>
				<height>205</height>
				<texture>background.png</texture>
				<colordiffuse>mask-background</colordiffuse>
			</control>
			<control type="image"><!-- Cd overlay -->
				<animation effect="slide" start="-102" end="0" time="900" tween="cubic" easing="out" delay="1000">WindowOpen</animation>
				<animation type="WindowClose">
					<effect type="slide" start="0" end="-98" time="100" tween="cubic" easing="in" delay="0"/>
					<effect type="fade" start="100" end="0" time="200"/>
					<condition type="!Player.Playing"/>
				</animation>
				<animation effect="rotate" end="-360" center="auto" time="3000" loop="true" reversible="false" condition="!Player.Paused">Conditional</animation>
				<width>215</width>
				<height>215</height>
				<left>132</left>
				<top>490</top>
				<texture fallback="DefaultDVDRom.png">$INFO[Window(Home).Property(SkinHelper.Player.Art.DiscArt)]</texture>
				<aspectratio aligny="bottom">keep</aspectratio>
				<visible>!String.EndsWith(Control.GetLabel(994),DefaultAudio.png) + !String.EndsWith(Control.GetLabel(994),icon-radio.png)</visible>
			</control>
			<control type="image">
				<left>10</left>
				<top>465</top>
				<height>265</height>
				<width>265</width>
				<texture>case-cd.png</texture>
				<aspectratio>stretch</aspectratio>
				<visible>Skin.HasSetting(media-case) + !String.EndsWith(Control.GetLabel(994),DefaultAudio.png) + !String.EndsWith(Control.GetLabel(994),icon-radio.png)</visible>
			</control>
			<control type="image" id="994"><!-- Cover image -->
				<left>36</left>
				<top>485</top>
				<width>225</width>
				<height>225</height>
				<texture fallback="DefaultAudio.png">$VAR[PlayerMusicCover]</texture>
				<aspectratio aligny="bottom">stretch</aspectratio>
			</control>
			<control type="button"><!-- Touch button to get out of Fullscreen -->
				<left>36</left>
				<top>485</top>
				<width>225</width>
				<height>225</height>
				<texturefocus>blank.png</texturefocus>
				<texturenofocus>blank.png</texturenofocus>
				<onclick>Back</onclick>
				<visible>$EXP[isEnabledTouch]</visible>
			</control>
			<control type="label"><!-- Now playing -->
				<left>370</left>
				<top>518</top>
				<width>682</width>
				<height>25</height>
				<label>$LOCALIZE[31037]</label>
				<font>apptv25</font>
				<textcolor>listselected-text</textcolor>
			</control>
			<control type="label"><!-- Partymode enabled -->
				<left>990</left>
				<top>520</top>
				<width>266</width>
				<height>23</height>
				<label>$LOCALIZE[589]</label>
				<align>right</align>
				<font>apptv23</font>
				<visible>MusicPartyMode.Enabled</visible>
			</control>
			<control type="label"><!-- Playlist label -->
				<left>974</left>
				<top>520</top>
				<width>266</width>
				<height>23</height>
				<align>right</align>
				<label>$INFO[Playlist.Position(music),$LOCALIZE[554]: ]$INFO[Playlist.Length(music), / ]</label>
				<font>apptv23</font>
				<visible>!MusicPartyMode.Enabled + !String.IsEqual(Playlist.Length(music),0)</visible>
			</control>
			<control type="label"><!-- Title label -->
				<left>370</left>
				<top>547</top>
				<width>880</width>
				<height>25</height>
				<font>apptv25</font>
				<label>$LOCALIZE[19021] - $INFO[MusicPlayer.ChannelName]</label>
				<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
				<visible>Pvr.IsPlayingRadio</visible>
			</control>
			<control type="label"><!-- Title label -->
				<left>370</left>
				<top>547</top>
				<width>880</width>
				<height>25</height>
				<font>apptv25</font>
				<label>$INFO[MusicPlayer.Title]</label>
				<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
				<visible>!Pvr.IsPlayingRadio</visible>
			</control>
			<control type="label"><!-- Artist label -->
				<left>370</left>
				<top>576</top>
				<width>880</width>
				<height>22</height>
				<font>apptv22</font>
				<label>$INFO[MusicPlayer.Artist]</label>
				<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
			</control>
			<control type="label"><!-- Album label -->
				<left>370</left>
				<top>602</top>
				<width>880</width>
				<height>22</height>
				<font>apptv22</font>
				<label>$INFO[MusicPlayer.Album]</label>
				<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
			</control>
			<control type="label"><!-- Time label -->
				<left>370</left>
				<top>689</top>
				<width>200</width>
				<height>22</height>
				<label>$INFO[MusicPlayer.Time]$INFO[MusicPlayer.Duration, / ]</label>
				<font>apptv22</font>
				<visible>!Pvr.IsPlayingRadio</visible>
			</control>
			<control type="progress" id="1">
				<left>575</left>
				<top>692</top>
				<width>675</width>
				<height>16</height>
				<info>Player.Progress</info>
				<visible>!Pvr.IsPlayingRadio</visible>
			</control>
			<control type="slider" id="402"><!-- Seek slider -->
				<left>575</left>
				<top>692</top>
				<width>675</width>
				<height>16</height>
				<action>seek</action>
				<visible>!Pvr.IsPlayingRadio</visible>
			</control>
		</control>
	</controls>
</window>