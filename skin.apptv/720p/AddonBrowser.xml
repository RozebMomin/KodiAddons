<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<include>screen-fade</include>
	<views>50,52,54,57,58</views>
	<onload>ClearProperty(ShowScreenSettings,Home)</onload>
	<onunload>ClearProperty(ShowScreenSettings,Home)</onunload>
	<controls>
		<include>background</include>
		<include>Fake-Overlay</include>
		<control type="grouplist">
			<left>780</left>
			<top>35</top>
			<width>auto</width>
			<height>62</height>
			<align>left</align>
			<aligny>bottom</aligny>
			<orientation>horizontal</orientation>
			<control type="label"><!-- Addons heading -->
				<width max="256">auto</width>
				<height>72</height>
				<label>$LOCALIZE[24001]</label>
				<font>font18</font>
				<wrapmultiline>true</wrapmultiline>
				<aligny>top</aligny>
			</control>
			<control type="label"><!-- Number of file -->
				<width max="80">auto</width>
				<height>50</height>
				<label>$INFO[Container.NumItems,(,)]</label>
				<aligny>top</aligny>
			</control>
		</control>

		<control type="group"><!-- Various Views of Addons Browser -->
			<include file="View-General.xml">ListView</include>
			<include file="View-General.xml">IconView</include>
			<include file="View-General.xml">WrapView</include>
			<include file="View-General.xml">WallView</include>
			<include file="View-General.xml">Coverflow</include>
		</control>

		<control type="group"><!-- Screen-settings Menu -->
			<left>0</left>
			<top>720</top>
			<include>screen-settings</include>
			<include>fadebackground</include>
			<control type="image"><!-- Dialog background -->
				<left>438</left>
				<top>162</top>
				<width>400</width>
				<height>456</height>
				<texture border="8">button-menu-background.png</texture>
			</control>
			<control type="label"><!-- Dialog heading -->
				<left>450</left>
				<top>170</top>
				<width>376</width>
				<height>34</height>
				<font>font12</font>
				<label>$LOCALIZE[31557]</label>
				<align>center</align>
			</control>
			<control type="button"><!-- Touch Close button -->
				<left>816</left>
				<top>152</top>
				<width>32</width>
				<height>32</height>
				<texturefocus>touch-close.png</texturefocus>
				<texturenofocus>touch-close.png</texturenofocus>
				<onclick condition="!StringCompare(Window(Home).Property(ShowScreenSettings),show)">SetProperty(ShowScreenSettings,show,Home)</onclick>
				<onclick condition="StringCompare(Window(Home).Property(ShowScreenSettings),show)">ClearProperty(ShowScreenSettings,Home)</onclick>
				<visible>system.getbool(input.enablemouse)</visible>
			</control>
			<control type="image">
				<left>450</left>
				<top>206</top>
				<width>376</width>
				<height>4</height>
				<texture>separator.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<left>450</left>
				<top>218</top>
				<width>376</width>
				<height>384</height>
				<onright>50</onright>
				<onleft>50</onleft>
