<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>999</defaultcontrol>
	<coordinates>
		<left>265</left>
		<top>75</top>
	</coordinates>
	<controls>
		<control type="image"><!-- Dialog background -->
			<left>40</left>
			<top>0</top>
			<width>785</width>
			<height>530</height>
			<texture colordiffuse="UnFocusedPosters" border="9">button-menu-background.png</texture>
			<visible>$EXP[isFullscreenVideo]</visible>
		</control>
		<control type="image"><!-- Dialog background -->
			<left>40</left>
			<top>0</top>
			<width>785</width>
			<height>530</height>
			<texture border="9">button-menu-background.png</texture>
			<visible>$EXP[isnotFullscreenVideo]</visible>
		</control>
		<control type="label"><!-- Heading label -->
			<left>61</left>
			<top>4</top>
			<width>743</width>
			<height>37</height>
			<align>center</align>
			<font>apptv23</font>
			<label>$LOCALIZE[298] ($INFO[Container(11).NumItems])</label>
		</control>
		<control type="button"><!-- Touch mouse close button -->
			<left>804</left>
			<top>-10</top>
			<width>32</width>
			<height>32</height>
			<texturefocus>touch-close.png</texturefocus>
			<texturenofocus>touch-close.png</texturenofocus>
			<onclick>Dialog.Close(videobookmarks)</onclick>
			<visible>$EXP[isEnabledTouch]</visible>
		</control>
		<control type="image">
			<left>61</left>
			<top>42</top>
			<width>743</width>
			<height>4</height>
			<texture>separator.png</texture>
		</control>
		<control type="panel" id="11">
			<left>90</left>
			<top>55</top>
			<width>640</width>
			<height>400</height>
			<onright condition="String.IsEqual(Skin.String(show-scrollbar),$LOCALIZE[31877])">noop</onright>
			<onright condition="!String.IsEqual(Skin.String(show-scrollbar),$LOCALIZE[31877])">23</onright>
			<ondown>999</ondown>
			<viewtype label="31943">icon</viewtype>
			<pagecontrol>23</pagecontrol>
			<itemlayout height="200" width="320">
				<control type="image">
					<left>15</left>
					<top>11</top>
					<width>279</width>
					<height>152</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="label">
					<left>14</left>
					<top>174</top>
					<width>280</width>
					<height>25</height>
					<font>apptv22</font>
					<align>center</align>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>
			<focusedlayout height="200" width="320">
				<control type="image">
					<left>6</left>
					<top>2</top>
					<width>297</width>
					<height>170</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio>keep</aspectratio>
					<bordertexture border="9">mask-hilite.png</bordertexture>
					<bordersize>9</bordersize>
				</control>
				<control type="label">
					<left>14</left>
					<top>174</top>
					<width>280</width>
					<height>25</height>
					<font>apptv22</font>
					<align>center</align>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</focusedlayout>
		</control>
		<control type="scrollbar" id="23">
			<left>750</left>
			<top>55</top>
			<width>16</width>
			<height>400</height>
			<ondown>999</ondown>
			<onleft>11</onleft>
			<animation condition="!Control.HasFocus(23) + !Container.Scrolling + !String.IsEqual(Skin.String(show-scrollbar),$LOCALIZE[31875])" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
			<visible>$EXP[isEnabledScrollbar]</visible>
		</control>
		<control type="grouplist" id="999"><!-- Option buttons -->
			<left>58</left>
			<top>470</top>
			<width>750</width>
			<height>46</height>
			<orientation>horizontal</orientation>
			<align>center</align>
			<onup>11</onup>
			<control type="button" id="2"><!-- Create Bookmark button -->
				<width>250</width>
				<height>46</height>
				<label>$LOCALIZE[294]</label>
				<font>apptv22</font>
				<textoffsetx>10</textoffsetx>
				<align>center</align>
			</control>
			<control type="button" id="3"><!-- Clear Bookmark button -->
				<width>250</width>
				<height>46</height>
				<label>$LOCALIZE[296]</label>
				<font>apptv22</font>
				<textoffsetx>10</textoffsetx>
				<align>center</align>
			</control>
			<control type="button" id="4"><!-- Set episode bookmark -->
				<width>250</width>
				<height>46</height>
				<label>$LOCALIZE[20406]</label>
				<font>apptv22</font>
				<textoffsetx>10</textoffsetx>
				<align>center</align>
				<visible>videoplayer.content(episodes)</visible>
			</control>
		</control>
	</controls>
</window>
