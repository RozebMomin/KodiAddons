<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<include>screen-fade</include>
	<views>50,52,53,54,57,58,560</views>
	<onload condition="Skin.HasSetting(media-themetune) + SubString(Window(Videos).Property(CinemaExperienceRunning),True)">SetProperty(TvTunesBlocked,true,Home)</onload>
	<onload>ClearProperty(ShowScreenSettings,Home)</onload>
	<onunload>ClearProperty(ShowScreenSettings,Home)</onunload>
	<onunload>ClearProperty(TvTunesBlocked,Home)</onunload>
	<controls>
		<visible>!Window.IsVisible(movieinformation)</visible>
		<include>backgroundvideo</include>
		<include>Fake-Overlay</include>
		<control type="grouplist">
			<left>946</left>
			<top>35</top>
			<width>auto</width>
			<height>72</height>
			<align>left</align>
			<aligny>center</aligny>
			<orientation>horizontal</orientation>
			<control type="label"><!-- Video screen heading -->
				<width max="256">auto</width>
				<height>72</height>
				<label>$VAR[VideoHeadings]</label>
				<font>font18</font>
				<wrapmultiline>true</wrapmultiline>
				<aligny>top</aligny>
			</control>
			<control type="label"><!-- Number of files -->
				<width max="80">auto</width>
				<height>72</height>
				<label>$INFO[Container.NumItems,(,)]</label>
				<aligny>top</aligny>
			</control>
		</control>

		<control type="group"><!-- Various Views of Video library node -->
			<visible>![IsEmpty(ListItem.Label) + IsEmpty(Container().ListItem(1).Label)]</visible>
			<include file="View-Video.xml">VideoListView</include>
			<include file="View-Video.xml">VideoIconView</include>
			<include file="View-Video.xml">BannerView</include>
			<include file="View-Video.xml">VideoWrapView</include>
			<include file="View-Video.xml">VideoCoverflow</include>
			<include file="View-Video.xml">VideoWallView</include>
			<include file="View-PVR.xml">PVRLiveTVView</include>
		</control>

		<control type="group"><!-- No Label tag means video addon is busy pulling in content, so show a busy animation -->
			<visible>IsEmpty(ListItem.Label) + IsEmpty(Container().ListItem(1).Label) + System.IdleTime(1) + !Window.IsVisible(busydialog)</visible>
			<include>fadebackground</include>
			<control type="image"><!-- Busy animation -->
				<left>576</left>
				<top>290</top>
				<width>128</width>
				<height>128</height>
				<texture>busy.png</texture>
				<aspectratio>keep</aspectratio>
				<include>busy-spin</include>
			</control>
		</control>

		<control type="group"><!-- Screen-settings Menu -->
			<left>0</left>
			<top>720</top>
			<include>screen-settings</include>
			<include>fadebackground</include>
			<control type="image"><!-- Button background -->
				<left>440</left>
				<top>46</top>
				<width>396</width>
				<height>628</height>
				<texture border="8">button-menu-background.png</texture>
			</control>
			<control type="label"><!-- Dialog heading -->
				<left>450</left>
				<top>56</top>
				<width>376</width>
				<height>34</height>
				<font>font12</font>
				<label>$LOCALIZE[31557]</label>
				<align>center</align>
			</control>
			<control type="button"><!-- Touch Close button -->
				<left>814</left>
				<top>38</top>
				<width>32</width>
				<height>32</height>
				<texturefocus>touch-close.png</texturefocus>
				<texturenofocus>touch-close.png</texturenofocus>
				<onclick condition="!StringCompare(Window(Home).Property(ShowScreenSettings),show)">SetProperty(ShowScreenSettings,show,Home)</onclick>
				<onclick condition="StringCompare(Window(Home).Property(ShowScreenSettings),show)">ClearProperty(ShowScreenSettings,Home)</onclick>
				<visible>system.getbool(input.enablemouse)</visible>
			</control>
			<control type="image">
				<left>450</left>
				<top>92</top>
				<width>376</width>
				<height>4</height>
				<texture>separator.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<left>450</left>
				<top>104</top>
				<width>376</width>
				<height>528</height>
				<onright>50</onright>
				<onleft>50</onleft>
				<control type="button" id="2"><!-- View as button -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[100]</label>
				</control>
				<control type="radiobutton" id="1198"><!-- Tilt list view icons button  -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltvideolisticon)</onclick>
					<selected>Skin.HasSetting(tiltvideolisticon)</selected>
					<radioposx>330</radioposx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31941],Right)</visible>
				</control>
				<control type="radiobutton" id="1197"><!-- Tilt wall view icons button -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltvideowallicon)</onclick>
					<selected>Skin.HasSetting(tiltvideowallicon)</selected>
					<radioposx>330</radioposx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31944],Right)</visible>
				</control>
				<control type="button" id="3"><!-- Sort by button -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[103]</label>
				</control>
				<control type="togglebutton" id="4"><!-- Sort direction button -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[21429]: $LOCALIZE[21430]</label>
					<altlabel>$LOCALIZE[21429]: $LOCALIZE[21431]</altlabel>
					<font>font11</font>
				</control>
				<control type="button" id="10"><!-- Show button -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<visible>!Skin.HasSetting(watched_filtering_toggle)</visible>
				</control>
				<control type="button" id="14"><!-- Watched video toggle button -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[20367]</label>
					<font>font11</font>
					<visible>Skin.HasSetting(watched_filtering_toggle)</visible>
				</control>
				<control type="button" id="8"><!-- Search button -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[137]</label>
					<font>font11</font>
				</control>
				<control type="edit" id="19"><!-- Filter button -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[587]</label>
					<textwidth>340</textwidth>
					<visible>!Container.CanFilterAdvanced</visible>
				</control>
				<control type="radiobutton" id="98"><!-- Advanced filter button -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[587]</label>
					<font>font11</font>
					<selected>Container.Filtered</selected>
					<onclick>Filter</onclick>
					<radioposx>330</radioposx>
					<visible>Container.CanFilterAdvanced</visible>
				</control>
				<control type="button" id="16"><!-- Party mode button -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[589]</label>
					<font>font11</font>
					<visible>Container.Content(MusicVideos)</visible>
				</control>
				<control type="radiobutton" id="11"><!-- Unlock shares button -->
					<label>$LOCALIZE[20336]</label>
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<onclick>Mastermode</onclick>
					<selected>system.ismaster</selected>
					<radioposx>330</radioposx>
					<visible>system.haslocks</visible>
				</control>
				<control type="button" id="1199"><!-- Goto playlist button -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[13350]</label>
					<onclick>$VAR[PlayList]</onclick>
					<visible>Player.HasMedia</visible>
					<visible>!VideoPlayer.Content(LiveTV)</visible>
					<visible>!Window.IsVisible(musicplaylist) + !Window.IsVisible(videoplaylist)</visible>
				</control>
				<control type="togglebutton" id="20"><!-- Update library button -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[653]</label>
					<altlabel>$LOCALIZE[13353]</altlabel>
					<usealttexture>library.isscanningvideo</usealttexture>
				</control>
				<control type="button" id="1200"><!-- player controls button -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[16003] $LOCALIZE[478]</label>
					<onclick>ActivateWindow(playercontrols)</onclick>
					<onclick>SetFocus(50)</onclick>
					<visible>Player.HasAudio | Player.HasVideo</visible>
				</control>
				<control type="button" id="22"><!-- now playing -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[13350]</label>
					<onclick>ActivateWindow(videoplaylist)</onclick>
					<visible>Player.HasVideo</visible>
				</control>
			</control>
		</control>

		<include>group-focusvert</include>
		<include>group-focushorz</include>

		<include>touch-controls</include>

	</controls>
</window>