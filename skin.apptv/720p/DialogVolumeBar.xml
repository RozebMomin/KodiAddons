<?xml version="1.0" encoding="UTF-8"?>
<window>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<visible>!Window.IsVisible(notification)</visible>
		<control type="image"><!-- Dialog background -->
			<left>902</left>
			<top>12</top>
			<width>354</width>
			<height>124</height>
			<texture border="9">button-menu-background.png</texture>
		</control>
		<control type="label" id="0"><!-- Volume -->
			<left>1018</left>
			<top>22</top>
			<width>224</width>
			<height>40</height>
			<font>apptv38</font>
			<align>center</align>
			<label>$INFO[Player.Volume]</label>
			<visible>!Player.Muted</visible>
		</control>
		<control type="label"><!-- Muted label -->
			<left>1018</left>
			<top>22</top>
			<width>224</width>
			<height>40</height>
			<font>apptv38</font>
			<align>center</align>
			<label>[B]$LOCALIZE[31651][/B]</label>
			<visible>Player.Muted</visible>
		</control>
		<control type="image"><!-- Non muted image -->
			<left>918</left>
			<top>22</top>
			<width>96</width>
			<height>96</height>
			<texture>volume-thingy.png</texture>
			<visible>!Player.Muted</visible>
		</control>
		<control type="image"><!-- Muted image -->
			<left>920</left>
			<top>20</top>
			<width>96</width>
			<height>96</height>
			<aspectratio>keep</aspectratio>
			<texture>volume-thingy-mute.png</texture>
			<visible>Player.Muted</visible>
		</control>
		<control type="progress">
			<left>1018</left>
			<top>72</top>
			<width>224</width>
			<height>16</height>
			<info>Player.Volume</info>
			<texturebg>blank.png</texturebg>
			<midtexture>colours/blue.png</midtexture>
			<animation effect="fade" start="50" end="50" time="0" condition="Player.Passthrough">Conditional</animation>
			<visible>Integer.IsGreater(Player.Volume,0)</visible>
		</control>
		<control type="image"><!-- Volume bar overlay -->
			<left>1018</left>
			<top>72</top>
			<width>224</width>
			<height>16</height>
			<texture>volume-overlay.png</texture>
		</control>
		<control type="label"><!-- Passthrough -->
			<left>918</left>
			<top>100</top>
			<width>322</width>
			<height>24</height>
			<label>$LOCALIZE[29802]</label>
			<font>apptv23</font>
			<align>center</align>
			<visible>Player.Passthrough</visible>
		</control>
	</controls>
</window>