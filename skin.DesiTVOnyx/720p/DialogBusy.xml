<?xml version="1.0" encoding="utf-8"?>
<window>
	<animation effect="fade" time="250" delay="1750">WindowOpen</animation>
	<animation effect="fade" time="100">WindowClose</animation>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<visible>IsEmpty(Window(Home).Property(script.cinemavision.running))</visible>
		<include>fadebackground</include>
		<control type="image"><!-- Busy animation -->
			<left>576</left>
			<top>290</top>
			<width>128</width>
			<height>128</height>
			<texture>busy.png</texture>
			<aspectratio>keep</aspectratio>
			<include>busy-spin</include>
		</control>
		<control type="progress" id="10">
			<left>512</left>
			<top>432</top>
			<width>256</width>
			<height>16</height>
		</control>
	</controls>
</window>
